{
  "kind": "collectionType",
  "collectionName": "inventories",
  "info": {
    "singularName": "inventory",
    "pluralName": "inventories",
    "displayName": "Inventory",
    "description": "Finished goods inventory tracking"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "product": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::product.product"
    },
    "batch": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::batch.batch"
    },
    "quantityOnHand": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 0
    },
    "quantitySold": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "unitCost": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "totalValue": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "valuationMethod": {
      "type": "enumeration",
      "enum": ["fifo", "weighted_average", "specific_identification"],
      "default": "fifo"
    },
    "location": {
      "type": "string",
      "default": "warehouse"
    },
    "lastUpdated": {
      "type": "datetime"
    },
    "notes": {
      "type": "text"
    }
  }
}
