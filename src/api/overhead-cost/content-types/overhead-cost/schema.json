    "isPrepaid": {
      "type": "boolean",
      "default": false
    },
    "prepaidAssetValue": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "amortizationPeriod": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "amortizedAmount": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "remainingValue": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "supplier": {
      "type": "string"
    },
    "invoiceNumber": {
      "type": "string"
    },
    "allocatedToBatch": {
      "type": "boolean",
      "default": false
