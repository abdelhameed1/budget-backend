      "required": true
    },
    "ratePerUnit": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "ratePerHour": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "applicableStage": {
      "type": "enumeration",
      "enum": ["launch", "growth", "maturity", "all"],
      "default": "all"
    },
    "effectiveFrom": {
      "type": "date",
      "required": true
    },
    "effectiveTo": {
      "type": "date"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "description": {
      "type": "text"
    },
    "notes": {
      "type": "text"
    }
  }
